  | SpellId('Target_PhantasmalForce')
  | SpellId('Target_Silence')
  | SpellId('CL_Target_MisdirectedMark')
  | SpellId('CL_Target_Hush')
  | SpellId('CL_Target_Glamour')
  | SpellId('CL_Target_HeroicTouch')
  | SpellId('CL_Target_FrenzyingTouch')
